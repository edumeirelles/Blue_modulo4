@model Categoria

<h2>Editar Categoria do Instrumento @ViewBag.instrumento</h2>

<div class="row">
    <form class="col-md-4" asp-action="Update">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InstrumentoId" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="InstrumentoCategoria"></label>
            <input class="form-control" asp-for="InstrumentoCategoria" />
            <span class="text-danger" asp-validation-for="InstrumentoCategoria"></span>
        </div>
        
        <input type="submit" value="Editar!" class="btn btn-primary" />
        <a class="btn btn-primary" asp-controller="Categorias" asp-action="Index">Voltar</a>
    </form>
</div>